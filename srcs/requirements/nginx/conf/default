server {
	listen 443 ssl;
	listen [::]:443 ssl;

	server_name pceccoli.42.fr;


	root /var/www/wordpress;

	ssl_protocols TLSv1.3;

	ssl on;
	ssl_certificate /etc/ssl/certs/pceccoli.crt;
	ssl_certificate_key /etc/ssl/private/pceccoli_p.key;

	index index.php;

		location ~ \.php$ {
			try_files $uri =404;
			fastcgi_pass wordpress:9000;
			fastcgi_index index.php;
			include fastcgi_params;
			fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
        }
}